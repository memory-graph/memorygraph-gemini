{
  "name": "memorygraph",
  "version": "1.0.0",
  "description": "Persistent graph-based memory for Gemini CLI. Remember solutions, patterns, and context across sessions.",
  "contextFileName": "GEMINI.md",
  "mcpServers": {
    "memorygraph": {
      "command": "memorygraph",
      "args": [],
      "env": {
        "MEMORY_BACKEND": "${MEMORY_BACKEND:-sqlite}",
        "MEMORYGRAPH_API_KEY": "${MEMORYGRAPH_API_KEY}",
        "MEMORYGRAPH_DATA_DIR": "${MEMORYGRAPH_DATA_DIR}"
      }
    }
  }
}
